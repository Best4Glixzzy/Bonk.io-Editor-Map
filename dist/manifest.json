{
  "manifest_version": 2,
  "name": "kklee",
  "version": "0.10",
  "description": "Extends the functionality of the Bonk.io map editor.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://bonk.io/*"
  ],
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://bonk.io/gameframe-release.html"
      ],
      "js": [
        "loadInjector.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "injector.js",
    "runInjectors.js"
  ],
  "icons": {
    "64": "icons/icon.png"
  }
}